@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        

        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <a  style="color:white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>&nbsp;&nbsp;
            <button style="background-color: #a23f25;color: white;border: 0;" type="submit" >Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a style="color:white" asp-area="Identity" asp-page="/Account/Register">Register</a>&nbsp;&nbsp;
        <a  style="color:white" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
